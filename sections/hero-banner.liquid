{% if section.settings.banner_heading != '' or section.settings.text_alignment != "select" %}
<div class="home-banner">
  <div class="home-banner__container">
    <div class="home-banner__contentWrap">
      <div class="home-banner__image">
        {% if section.settings.desktop_banner %}
         <img class="hide-mobile" src="{{section.settings.desktop_banner | img_url : 'master' }}" alt="hero-image" />
        {% endif %}
        {% if section.settings.mobile_banner %}
        	<img class="hide-desktop" src="{{section.settings.mobile_banner | img_url : 'master' }}" alt="hero-image" />
        {% endif %}
      </div>
      <div class="home-banner__textContent">
        <h1 class="hero__title">{{section.settings.banner_heading}}</h1>
        {% if section.settings.banner_text %}
        	<p class="hero__text">{{section.settings.banner_text}}</p>
        {% endif %}
        {% if section.settings.cta_text != '' %}
        	<a {% if section.settings.cta_link != '' %}href="{{section.settings.cta_link}}" {% endif %} class="hero__cta">{{section.settings.cta_text}}</a>
        {% endif %}
      </div>
    </div>
  </div>
</div>
{% endif %}

