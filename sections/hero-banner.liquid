<style>
 {% unless section.settings.desktop_banner %}
  .home-banner{ 
    {% if section.settings.background_color != ''  %}
    	background-color: {{section.settings.background_color}};
    {% else %}
    	background-color: transparent;
    {% endif %}
  }
  .home-banner__image{
    min-height: 474px;
  }
  @media(max-width: 749px){
    .home-banner__image{
      min-height: 742px;
    }
  }
  {% endunless %}
.home-banner__textContent{
  transform: translateY(-50%);
  margin: 0 80px;
 {% if section.settings.text_alignment == "left" %}
   left:0;
   text-align: left;
  {% elsif section.settings.text_alignment == "right" %}
   right:0;
   text-align: left;
  {% else %}
    left: 50%;
    margin:0;
    transform: translate(-50%,-50%);
    text-align: center;
 {% endif %}
}


.hero__title{
 {% if section.settings.heading_color != '' %}
   color: {{section.settings.heading_color}};
 {% endif %}
}

.hero__text{
  {% if section.settings.text_color != '' %}
   color: {{section.settings.text_color}};
  {% endif %}
}

.hero__cta{
 {% if section.settings.cta_color != '' %}
    color : {{section.settings.cta_color}};
  {% endif %}

  {% if section.settings.cta_background_color != '' %}
    background: {{section.settings.cta_background_color}}
  {% endif %}
}

a.hero__cta:hover{
 {% if section.settings.cta_hover_color %}
    color : {{section.settings.cta_hover_color}};
  {% endif %}
  {% if section.settings.cta_hover_background_color %}
    background: {{section.settings.cta_hover_background_color}}
  {% endif %}
}

</style>

